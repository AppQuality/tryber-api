{
  "name": "new-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "jest": "jest  ./dist",
    "test": "npm-run-all build jest",
    "clean": "rimraf dist",
    "transpile": "babel ./src --out-dir dist --extensions \".ts,.js\"",
    "copy-reference": "copyfiles -f src/reference/* dist/reference/",
    "build": "npm-run-all clean transpile copy-reference",
    "dev": "NODE_ENV=development npm-run-all build server",
    "server": "node ./dist/index.js",
    "watch:dev": "nodemon",
    "start": "npm run watch:dev",
    "prepare": "npx husky install",
    "types": "npx openapi-typescript src/reference/openapi.yml --output src/schema.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@appquality/wp-auth": "^1.0.7",
    "@babel/runtime": "^7.16.7",
    "@googlemaps/google-maps-services-js": "^3.3.7",
    "@sendgrid/mail": "^7.6.0",
    "ajv": "^8.9.0",
    "avatar-initials": "^5.0.0",
    "axios": "^0.25.0",
    "body-parser": "^1.19.1",
    "codice-fiscale-js": "^2.3.13",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "node-fetch": "^3.1.1",
    "openapi-backend": "^3.9.2",
    "parse-comments": "^1.0.0",
    "php-unserialize": "^0.0.1",
    "wordpress-hash-node": "^1.0.0"
  },
  "babel": {
    "presets": [
      "@babel/typescript",
      "@babel/env"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*"
    ],
    "ext": "ts,json",
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.7",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mysql": "^2.15.20",
    "@types/supertest": "^2.0.11",
    "@types/wordpress-hash-node": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "copyfiles": "^2.4.1",
    "husky": "^7.0.4",
    "jest": "^24.9.0",
    "jest-cli": "^24.7.1",
    "nodemon": "^2.0.15",
    "openapi-typescript": "^5.1.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "webpack": "^4.30.0",
    "webpack-dev-middleware": "^3.6.2"
  }
}
